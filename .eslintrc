{
    "plugins": [
        "babel",
        "react"
    ],

    "extends": [
        "eslint:all",
        "plugin:react/recommended"
    ],

    "parser": "babel-eslint",

    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },

    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },

    "rules": {
        "array-element-newline": [2, "consistent"],
        "babel/no-invalid-this": 1,
        "dot-location": [2, "property"],
        "func-style": 0,
        "id-length": 0,
        "indent": ["error", 4, {"SwitchCase": 1}],
        "max-len": 0,
        "no-confusing-arrow": [2, {"allowParens": true}],
        "no-extra-parens": [2, "all", {"enforceForArrowConditionals": false}],
        "no-invalid-this": 0,
        "no-magic-numbers": 0,
        "no-multiple-empty-lines": [2, {"max": 1, "maxEOF": 0}],
        "no-mixed-operators": 0,
        "no-ternary": 0,
        "object-curly-newline": [2, { "ObjectPattern": { "multiline": true }}],
        "object-curly-spacing": [2, "always"],
        "one-var": 0,
        "padded-blocks": [2, "never"],
        "prefer-destructuring": [2, {"object": false, "array": true}],
        "prefer-object-spread": 0,
        "quote-props": 0,
        "quotes": [2, "single"],
        "react/jsx-curly-spacing": [2, {"when": "always", "children": true, "allowMultiline": false}],
        "require-jsdoc": 0,
        "sort-vars": 0,
        "space-before-function-paren": [2, "never"],
        "template-curly-spacing": [2, "always"]
    },

    "settings": {
        "react": {
            "version": "16.6"
        }
    }
}
